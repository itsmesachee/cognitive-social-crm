{
  "name": "social-crm-starter-demo-app",
  "version": "2.0.0",
  "main": "server/server.js",
  "engines": {
    "node": "7.8.0",
    "npm": "5.2.0"
  },
  "scripts": {
    "browsersync": "browser-sync start --proxy 'localhost:3000' --port 3001 --files 'dist/client/**/*.*'",
    "lint": "eslint .",
    "lint-fix": "eslint . --fix",
    "build:client": "(cd ./client && npm run build)",
    "start": "path-exists dist/client && node . || echo 'no built client detected.'",
    "serve": "(cd ./client && npm run build) && concurrently \"node .\" \"sleep 5 && opener http://localhost:3000\"",
    "watch:client": "(cd ./client && npm run develop)",
    "watch:server": "nodemon --watch ./server --watch ./common",
    "init": "npm install",
    "postinstall": "path-exists client && (cd ./client && npm install) || echo 'client dependencies are skipped in production'",
    "develop": "concurrently \"npm run watch:client\" \"npm run watch:server\" \"sleep 20 && npm run browsersync\"; exit 0",
    "test": "npm run lint",
    "setup": "node ./setup/social-crm-setup.js"
  },
  "dependencies": {
    "body-parser": "1.15.2",
    "cfenv": "1.0.3",
    "cloudant": "1.8.0",
    "compression": "1.0.3",
    "cors": "2.5.2",
    "debug": "3.1.0",
    "dotenv": "2.0.0",
    "fs-sync": "1.0.3",
    "helmet": "1.3.0",
    "inquirer": "3.0.6",
    "loopback": "3.0.0",
    "loopback-boot": "2.23.0",
    "loopback-component-explorer": "2.4.0",
    "loopback-connector-cloudant": "1.2.4",
    "loopback-connector-rest": "2.1.0",
    "moment": "2.19.3",
    "multer": "1.2.0",
    "node-schedule": "1.2.3",
    "options": "0.0.6",
    "path-exists-cli": "1.0.0",
    "serve-favicon": "2.0.1",
    "strong-error-handler": "1.0.1",
    "twit": "2.2.5",
    "watson-developer-cloud": "2.32.1",
    "winston": "2.3.1"
  },
  "devDependencies": {
    "babel-eslint": "^6.0.4",
    "browser-sync": "2.18.11",
    "casperjs": "1.1.3",
    "concurrently": "3.4.0",
    "eslint": "3.19.0",
    "eslint-config-google": "^0.7.1",
    "eslint-config-prettier": "2.1.0",
    "eslint-plugin-node": "^4.2.2",
    "eslint-plugin-prettier": "^2.3.1",
    "istanbul": "^0.4.5",
    "prettier": "1.1.0",
    "nodemon": "1.11.0",
    "nsp": "2.1.0",
    "opener": "1.4.3",
    "validator": "7.0.0"
  },
  "repository": {
    "type": "",
    "url": ""
  },
  "license": "Apache-2.0",
  "description": "social-crm-starter-demo-app"
}
